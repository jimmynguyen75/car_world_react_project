                                placeholder="Nhập năm sản xuất"
                                className="currency"
                                displayType="input"
                                type="primary"
                                spellCheck="false"
                                style={{
                                    width: '100%',
                                    border: '1px solid #d9d9d9',
                                    padding: '4px 11px'

