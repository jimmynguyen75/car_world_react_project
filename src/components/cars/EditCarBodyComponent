                        <Form.Item label="Mô-men xoắn cực đại" name="maxTorque" rules={[{ required: true, message: "Mô-men xe không được bỏ trống" }]}>
                            <Input placeholder="Nhập mô-men xoắn cực đại (Nm)" />
